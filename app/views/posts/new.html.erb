<h1>Create Post</h1>

<%= form_with model: @post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title, size: "65" %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br><br>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "87x10" %>
      <% @post.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  <br>
  </div>
    <%= f.submit "Post" %>
  </div>
<% end %>
